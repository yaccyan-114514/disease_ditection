<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.disease.mapper.CropMapper">

    <resultMap id="cropResult" type="Crop">
        <id column="id" property="id"/>
        <result column="crop_name" property="cropName"/>
        <result column="planting_season" property="plantingSeason"/>
        <result column="region_adapt" property="regionAdapt"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <select id="findAll" resultMap="cropResult">
        SELECT * FROM crops ORDER BY created_at DESC
    </select>

    <select id="findById" parameterType="long" resultMap="cropResult">
        SELECT * FROM crops WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="Crop" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO crops (crop_name, planting_season, region_adapt)
        VALUES (#{cropName}, #{plantingSeason}, #{regionAdapt})
    </insert>

    <update id="update" parameterType="Crop">
        UPDATE crops
        SET crop_name = #{cropName}, planting_season = #{plantingSeason}, region_adapt = #{regionAdapt}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM crops WHERE id = #{id}
    </delete>
</mapper>
